<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Title Item of RecyclerView style. -->
    <style name="TitleItem" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_item</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Sub Title Item of RecyclerView style. -->
    <style name="SubTitleItem" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_sub_item</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
